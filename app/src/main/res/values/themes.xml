<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MvviBase" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Font" parent="Theme.MvviBase">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="Font.Bold" parent="Font">
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="Font.Bold.BigSpaces" parent="Font.Bold">
        <item name="android:letterSpacing">1</item>
    </style>

    <style name="Font.Bold.H1" parent="Font.Bold">
        <item name="android:textSize">20sp</item>
    </style>
</resources>